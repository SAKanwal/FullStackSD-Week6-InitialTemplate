<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:Week6_RESTFULAPI.ViewModels" xmlns:models="clr-namespace:Week6_RESTFULAPI.Models" x:Class="Week6_RESTFULAPI.Views.StudentPage" x:DataType="viewmodels:StudentsViewModel" Title="Student Page">
    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Search Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10" Margin="0,0,0,10">
            <Entry Grid.Column="0" Placeholder="Search by ID or Name" Text="{Binding SearchText}" ReturnCommand="{Binding SearchCommand}" VerticalOptions="Center" />

            <Button Grid.Column="1" Text="Search" Command="{Binding SearchCommand}" BackgroundColor="#2196F3" TextColor="White" WidthRequest="80" />

            <Button Grid.Column="2" Text="Clear" Command="{Binding RefreshCommand}" BackgroundColor="#607D8B" TextColor="White" WidthRequest="80" />
        </Grid>

        <!-- Add Student Button -->
        <Button Grid.Row="1" Text="+ Add New Student" Command="{Binding AddStudentCommand}" BackgroundColor="#4CAF50" TextColor="White" Margin="0,0,0,10" />

        <!-- Students List -->
        <RefreshView Grid.Row="2" IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding Students}" SelectionMode="None">

                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="No students found" HorizontalOptions="Center" FontSize="18" TextColor="Gray" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Student">

              
                            <!-- Swipe to Delete -->
                            <!--
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                              BackgroundColor="#F44336"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:StudentsViewModel}}, Path=DeleteCommand}"
                                              CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            -->
                            <!-- Student Card -->
                            <Frame Margin="5" Padding="15" BackgroundColor="White" CornerRadius="10" HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="15">

                                    <!-- ID Badge -->
                                    <Frame Grid.Column="0" WidthRequest="50" HeightRequest="50" CornerRadius="25" BackgroundColor="#2196F3" Padding="0" HasShadow="False" VerticalOptions="Center">
                                        <Label Text="{Binding Id}" TextColor="White" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Frame>

                                    <!-- Student Info -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                                        <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="#212121" />

                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding Program}" FontSize="14" TextColor="#757575" />
                                            <Label Text="|" FontSize="14" TextColor="#757575" />
                                            <Label FontSize="14" TextColor="#757575">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Year " />
                                                        <Span Text="{Binding Year}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </HorizontalStackLayout>

                                    </VerticalStackLayout>

                                    <!-- GPA Badge -->
                                    <Frame Grid.Column="2" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="#4CAF50" Padding="0" HasShadow="False" VerticalOptions="Center">
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="0">
                                            <Label Text="{Binding Gpa, StringFormat='{0:F1}'}" TextColor="White" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                                            <Label Text="GPA" TextColor="White" FontSize="10" HorizontalOptions="Center" />
                                        </VerticalStackLayout>
                                    </Frame>

                                <Button Text="Del" TextColor="White" FontSize="16" FontAttributes="Bold" Grid.Column="3" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="Red" HorizontalOptions="Center" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:StudentsViewModel}}, Path=DeleteCommand}" CommandParameter="{Binding .}" />


                                </Grid>
                            </Frame>
                      

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>